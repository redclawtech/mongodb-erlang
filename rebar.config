%% ex: ts=4 sw=4 noexpandtab syntax=erlang
{erl_opts, [debug_info, fail_on_warning]}.
{edoc_opts, [{index_columns, 1}, {sort_functions, false}, {preprocess, true}]}.

{dialyzer, [{plt_location, "plts"},
            {base_plt_location, "plts_base"}]}.

{deps, [
   {bson, ".*", {git, "git://github.com/comtihon/bson-erlang", {tag, "v0.2.3"}}},
   {pbkdf2, "2.0.0"},
   {poolboy, "1.5.2"}
]}.

{cover_enabled, true}.

{clean_files, [
  "erl_crash.dump",
  "doc/*.html",
  "doc/erlang.png",
  "doc/edoc-info",
  "doc/stylesheet.css"
]}.
